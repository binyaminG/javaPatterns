public static int getMin (int[] arr)
    {
        int min = arr[0]; // מניח שהאיבר הראשון הוא המינימום התחלתי
        for (int i = 1; i < arr.length; i++) // לולאה מאיבר שני עד הסוף
        {
            if (arr[i] < min) // אם נמצא איבר קטן יותר
            {
                min = arr[i]; // מעדכן את המינימום
            }
        }
        return min;
    }
